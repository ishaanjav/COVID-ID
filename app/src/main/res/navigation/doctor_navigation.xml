<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="app.ij.covid_id.ui.doctor_dashboard.DoctorDashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/navigation_patients"
        android:name="app.ij.covid_id.ui.doctor_statuses.DoctorStatuses"
        android:label="Patients"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="app.ij.covid_id.ui.map.MapFragment"
        android:label="Maps"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="app.ij.covid_id.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
</navigation>