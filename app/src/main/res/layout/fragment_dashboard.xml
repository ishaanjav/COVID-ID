<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/statusBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4sp"
            android:background="@drawable/dashboard_top">

            <TextView
                android:id="@+id/yourStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28sp"
                android:layout_marginTop="15sp"
                android:fontFamily="@font/ralewaybold"
                android:text="@string/yourstatus"
                android:textColor="#fff"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/yourStatusText"
                android:layout_marginLeft="60sp"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/remedium"
                android:text="Unknown"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/lastUpdated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/status"
                android:layout_marginLeft="14sp"
                android:layout_marginTop="5sp"
                android:fontFamily="@font/rlightitalic"
                android:text="Last Updated: "
                android:textColor="#E0E0E1"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lastUpdated"
                android:layout_marginTop="20sp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="10sp"
                    android:layout_weight="20" />

                <RelativeLayout
                    android:id="@+id/statusColor1"
                    android:layout_width="wrap_content"
                    android:layout_height="39sp"
                    android:layout_weight="125"
                    android:background="@drawable/white_test" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="10sp"
                    android:layout_weight="20" />
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/statusBox"
            android:layout_marginRight="4sp"
            android:layout_marginLeft="4sp"
            android:layout_marginTop="-4sp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="10sp"
                android:layout_weight="20" />

            <RelativeLayout
                android:id="@+id/statusColor2"
                android:layout_width="wrap_content"
                android:layout_height="27sp"
                android:layout_weight="125"
                android:background="@drawable/white_test_bottom" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="10sp"
                android:layout_weight="20" />
        </LinearLayout>
        <TextView
            android:id="@+id/text_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textSize="20sp" />


    </RelativeLayout>
</ScrollView>