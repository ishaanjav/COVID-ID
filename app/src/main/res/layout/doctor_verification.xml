<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/titleHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#793ED8"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="7sp"
                android:fontFamily="@font/ralewaybold"
                android:text="Verification"
                android:textColor="#fff"
                android:textSize="30sp" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleHolder"
            android:layout_margin="8sp"
            android:layout_marginTop="15sp"
            android:id="@+id/text"
            android:textColor="#000"
            android:textStyle="bold"
            android:fontFamily="@font/regular"
            android:text="You have successfully signed up for COVID-ID!\nYou will shortly receive a call to verify your account."
            android:textSize="21sp" />

        <ImageView
            android:layout_width="50sp"
            android:layout_height="40sp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/text"
            android:layout_marginTop="20sp"
            android:src="@drawable/gmail"
            android:layout_marginLeft="14sp"
            android:id="@+id/email"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_margin="8sp"
            android:layout_marginTop="20sp"
            android:id="@+id/text2"
            android:fontFamily="@font/regular"
            android:text="You may also contact\ncovid.ijapps@gmail.com if you forget your login credentials or for further information."
            android:textSize="20sp" />

        <Button
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:background="#793ED8"
            android:text="OK"
            android:textSize="24sp"
            android:textColor="#E5E2FF" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>