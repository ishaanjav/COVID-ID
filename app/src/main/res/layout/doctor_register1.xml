<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15sp"
    app:cardElevation="10sp">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_marginBottom="3sp"
        android:layout_marginTop="3sp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/existingusertext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27sp"
                android:layout_marginTop="17sp"
                android:fontFamily="@font/remedium"
                android:text="Account Info"
                android:textColor="#393939"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/userText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/existingusertext2"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/remedium"
                android:text="Username *"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userText"
                android:layout_marginLeft="36sp"
                android:layout_marginTop="-7sp"
                android:backgroundTint="#9547CD"
                android:ems="10"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/passText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="15sp"
                android:fontFamily="@font/remedium"
                android:text="Password *"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passText"
                android:layout_marginLeft="36sp"
                android:layout_marginTop="-7sp"
                android:backgroundTint="#9547CD"
                android:ems="10"
                android:inputType="textPassword"
                android:textCursorDrawable="@null"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pass"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="15sp"
                android:fontFamily="@font/remedium"
                android:text="Name *"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameText"
                android:layout_marginLeft="36sp"
                android:layout_marginTop="-7sp"
                android:backgroundTint="#9547CD"
                android:ems="10"
                android:inputType="textPersonName"
                android:textCursorDrawable="@null"
                android:textSize="20sp" />


            <ImageView
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_below="@id/name"
                android:layout_marginTop="15sp"
                android:id="@+id/phoneHelp"
                android:src="@drawable/helpicon"
                android:layout_marginLeft="6sp"
                />

            <TextView
                android:id="@+id/phoneText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="32sp"
                android:layout_marginTop="15sp"
                android:fontFamily="@font/remedium"
                android:text="Medical Center Phone *"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phoneText"
                android:layout_marginLeft="36sp"
                android:layout_marginTop="-7sp"
                android:backgroundTint="#9547CD"
                android:ems="7"
                android:inputType="phone"
                android:textCursorDrawable="@null"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="15sp"
                android:fontFamily="@font/remedium"
                android:text="Medical Center Email"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailText"
                android:layout_marginLeft="36sp"
                android:layout_marginTop="-7sp"
                android:backgroundTint="#9547CD"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textCursorDrawable="@null"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_below="@id/email"
                android:layout_marginTop="19sp"
                android:id="@+id/locationHelp"
                android:src="@drawable/helpicon"
                android:layout_marginLeft="6sp"
                />

            <EditText
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:layout_marginLeft="32sp"
                android:layout_marginTop="9sp"
                android:backgroundTint="#9547CD"
                android:ems="5"
                android:hint="City *"
                android:fontFamily="@font/remedium"
                android:textColorHint="#956DAE"
                android:textCursorDrawable="@null"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/state"
                android:layout_width="82sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="18sp"
                android:layout_toRightOf="@id/city" />

            <Spinner
                android:id="@+id/country"
                android:layout_width="115sp"
                android:layout_height="35sp"
                android:layout_below="@id/email"
                android:layout_marginLeft="2sp"
                android:layout_marginTop="18sp"
                android:layout_toRightOf="@id/state" />



            <ImageView
                android:id="@+id/photohelp"
                android:layout_width="27sp"
                android:layout_height="27sp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/country"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/helpicon" />

            <androidx.cardview.widget.CardView
                android:id="@+id/photo"
                android:layout_width="211sp"
                android:layout_height="210sp"
                android:layout_below="@id/country"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#B870FF"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/photoholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dbadge"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/country"
                android:layout_marginRight="20dp"
                android:layout_marginTop="36dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="7dp">

                <RelativeLayout
                    android:id="@+id/taking"
                    android:background="#F8E7C3F8" android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/clickimage"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:background="#F8E7C3F8"
                        app:srcCompat="@drawable/camera" />

                    <Button
                        android:id="@+id/takepicture"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="-3sp"
                        android:layout_below="@id/clickimage"
                        android:background="#A546D8"
                        android:text="Camera"
                        android:textColor="#FFFFFE"
                        android:textSize="17dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/removeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/cardholder"
                android:layout_marginRight="20dp"
                android:layout_marginTop="27dp"
                app:cardCornerRadius="13dp"
                app:cardElevation="7dp">

                <RelativeLayout
                    android:id="@+id/deleting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#F8E7C3F8">

                    <ImageView
                        android:id="@+id/removeimage"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="#F8E7C3F8"
                        app:srcCompat="@drawable/trash" />

                    <Button
                        android:id="@+id/removepicture"
                        android:layout_width="80dp"
                        android:layout_height="35sp"
                        android:layout_below="@id/removeimage"
                        android:background="#A546D8"
                        android:layout_marginTop="-2sp"

                        android:text="Discard"
                        android:textColor="#FFFFFE"
                        android:textSize="17dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/photo"
                android:layout_marginTop="15sp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/doctorPrevious1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginBottom="13sp"
                    android:layout_weight="55"
                    android:background="@drawable/red_button"
                    android:paddingTop="6sp"
                    android:paddingBottom="8sp"
                    android:text="Back"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="22sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/doctorContinue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:layout_marginBottom="13sp"
                    android:layout_weight="100"
                    android:background="@drawable/greybutton"
                    android:paddingTop="6sp"
                    android:paddingBottom="8sp"
                    android:text="Continue"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="22sp"
                    android:visibility="visible" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>